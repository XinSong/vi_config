#!/bin/bash

function count()
{
    FILENAME=$1
    FIELD=$2
    awk 'BEGIN{FS="\t";OFS="\t";}
        {sum+=$"'$FIELD'"}
        END{print sum}' $FILENAME
}
function table()
{
    FILENAME=$1
    FIELD=$2
    awk 'BEGIN{FS="\t";OFS="\t";}
        {sum[$"'$FIELD'"]++}
        END{for(i in sum) print i,sum[i]}' $FILENAME |
    sort -k2,2n
}
function sample()
{
    FILENAME=$1
    RATE=$2
    FLAG=`expr ${RATE} \< 1`
    if [ ${FLAG} -eq 1 ]
    then 
	awk 'BEGIN{FS="\t";OFS="\t"}
		{
			if(rand()<"'${RATE}'")
				print $0 > "'${FILENAME}'"".train"
			else
				print $0 > "'${FILENAME}'"".test"
		}' ${FILENAME}
    else
        awk 'BEGIN{FS="\t";OFS="\t";sample_number=int("'${RATE}'");}
        {
            if(NR <= sample_number)
                sample_set[NR]=$0
            else if(rand() < sample_number * 1.0 / NR)
                sample_set[int(rand()*sample_number)+1] = $0
        }END{
            for(i in sample_set)
                print i,sample_set[i] > "'${FILENAME}'"".train"
        }' ${FILENAME}
    fi
}
function oversample()
{
    FILENAME=$1
    FIELD=$2
    KEY=$3
    MULTIPLE=$4
    awk 'BEGIN{FS="\t";OFS="\t"}
        {
            if($"'${FIELD}'" == "'${KEY}'"){
                for(i=1;i<=int("'${MULTIPLE}'");i++)
                    print $0
            }
            else{
                print $0
            }
        }' ${FILENAME} > temp
    mv temp ${FILENAME}
}
